<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BubblesLoveApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryVariant">@color/rosado</item>
        <item name="colorOnPrimary">@color/blanco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blanco</item>
        <item name="colorSecondaryVariant">@color/blanco</item>
        <item name="colorOnSecondary">@color/negro</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.BubblesLoveApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/rojo</item>
        <item name="fullscreenTextColor">@color/rojo</item>
    </style>
</resources>
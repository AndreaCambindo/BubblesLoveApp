<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_cita_icon"
        app:layout_constraintTop_toTopOf="@id/item_cita_title"
        app:layout_constraintBottom_toBottomOf="@id/item_cita_sumary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:srcCompat="@drawable/citaimage"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_cita_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_cita_icon"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        tools:text="Testeando traguitos"
        android:textAppearance="@style/Theme.Bubbles.Headline3"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_cita_sumary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_cita_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/item_cita_title"
        tools:text="Hagan una lista de bares y vayan a tomarse un trago distinto en ca..."
        android:textAppearance="@style/Theme.Bubbles.Body1"/>

    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/item_cita_sumary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="0dp"
        app:dividerColor="@color/rosado"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
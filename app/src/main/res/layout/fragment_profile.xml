<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment"
    android:background="@drawable/back">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_fragment_image"
        android:layout_width="@dimen/Logo_size"
        android:layout_height="@dimen/Logo_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        app:shapeAppearanceOverlay="@style/cutImage"
        app:strokeColor="@color/rosado"
        app:strokeWidth="@dimen/stroke_size"
        app:srcCompat="@drawable/logobl"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.Bubbles.Body1"
        tools:text="Andrea Cambindo"
        android:textColor="@color/rojo"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.Bubbles.Body1"
        tools:text="Andreacambindo@gmail.com"
        android:textColor="@color/negro"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.Bubbles.Body1"
        tools:text="Femenino"
        android:textColor="@color/negro"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_fragment_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_double_arrow_left_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>